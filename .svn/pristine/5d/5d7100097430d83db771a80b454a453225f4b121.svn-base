import { css } from "@emotion/react";

const InputCss = () => css`
  position: relative;

  & .input-label {
    position: absolute;
    transform: translateY(-60%);
    color: #999;
    background-color: #fff;
    padding:0 0.5rem;
    background: linear-gradient(to top, #FFF 0%,#FFF 37%,rgb(248, 250, 253) 23%,rgb(248, 250, 253) 100%);
  }

  & .input-text-indent {
    text-indent: 1.4rem; //change value to match design
  }

  & .icon-left {
    position: absolute;
    z-index: 10;
    left: 0.5rem;
    top: 0.9rem;
    font-size: 0.9rem;
    background-color: none !important; //to remove default icon border color
    border: none !important;
    background-color: transparent !important; //to remove default icon background color
  }

  & .icon-right {
    position: absolute;
    z-index: 10;
    width: auto;
    right: 1.5rem;
    top: 0.9rem;
    font-size: 0.9rem;
  }
`;

export default InputCss;
